<script> 
// SCRIPT 1
    $(document).ready(function(){
        $("#p1").attr("value","My name");// setting (changing) value of value(name to My name) inside a <p> tag
        alert($("#p1").attr("value"));// getting changed name of value(My name) inside of <p> tag
        
    })
    
    
</script>
